{
  "name": "hitchens-eleventy",
  "version": "1.0.0",
  "description": "An inarguably well-designed Eleventy theme inspired by Christopher Hitchens",
  "scripts": {
    "start": "npm run build:css && npm run dev",
    "dev": "eleventy --serve",
    "build": "npm run build:css && npm run build:eleventy",
    "build:eleventy": "eleventy",
    "build:css": "sass --load-path=_sass assets/css/main.scss _site/assets/css/main.css",
    "watch:css": "sass --watch --load-path=_sass assets/css/main.scss _site/assets/css/main.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patdryburgh/hitchens.git"
  },
  "keywords": ["eleventy", "eleventy-theme", "blog", "minimal", "starter"],
  "author": "Pat Dryburgh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patdryburgh/hitchens/issues"
  },
  "homepage": "https://github.com/patdryburgh/hitchens#readme",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "luxon": "^3.7.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "sass": "^1.93.2"
  }
}
