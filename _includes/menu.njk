{% if menu %}
  <nav class="site-navigation" role="navigation">
    <ul>
      <li>
        <a href="{{ site.baseurl }}/">
          Home
        </a>
      </li>
    {% for item in menu %}
      <li {% if page.url == item.url %}class="active"{% endif %}>
        {% if item.url.includes('http') %}
          <a href="{{ item.url }}">
            {{ item.title }}
          </a>
        {% else %}
          <a href="{{ site.baseurl }}{{ item.url }}">
            {{ item.title }}
          </a>
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  </nav>
{% endif %}
